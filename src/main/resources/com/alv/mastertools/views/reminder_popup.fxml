<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" 
      xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.alv.mastertools.controllers.ReminderPopupController"
      stylesheets="@../styles.css"
      style="-fx-background-color: #2E3440; -fx-border-color: #88C0D0; -fx-border-width: 2;">

    <children>
        <Label text="¿Qué estás haciendo ahora?" styleClass="header-label" style="-fx-font-size: 18px;" />
        
        <TextArea fx:id="taskDescriptionArea" prefRowCount="3" wrapText="true" 
                  style="-fx-font-size: 14px; -fx-control-inner-background: #3B4252; -fx-text-fill: white;" />
        
        <HBox alignment="CENTER" spacing="10">
            <Button text="Guardar (F12)" onAction="#handleSave" defaultButton="true" styleClass="button-success" />
        </HBox>
        
        <Label text="ESC: Seguir igual | F12: Guardar | Enter: Salto de línea" style="-fx-font-size: 11px; -fx-text-fill: #4C566A;" />
    </children>
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
