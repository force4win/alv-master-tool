<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.alv.mastertools.controllers.PrimaryController"
            stylesheets="@../styles.css">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 20; -fx-background-color: -color-bg-sidebar; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, 5, 5, 0);">
            <Label text="ALV MASTER" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: -color-accent;"/>
            <Region HBox.hgrow="ALWAYS" />
            <javafx.scene.control.ComboBox fx:id="themeSelector" prefWidth="120" styleClass="theme-selector" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox styleClass="sidebar" prefWidth="250">
            <children>
                <!-- Opciones -->
                <VBox spacing="2" VBox.vgrow="ALWAYS" style="-fx-padding: 20 10;">
                    <children>
                        <Label text="MENÚ PRINCIPAL" style="-fx-text-fill: -color-text-muted; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;"/>
                        <Button text="INICIO" onAction="#showHome" maxWidth="Infinity" />
                        <Button text="SEGUIMIENTO" onAction="#showTracker" maxWidth="Infinity" />
                        
                        <Label text="SISTEMA" style="-fx-text-fill: -color-text-muted; -fx-font-size: 11px; -fx-padding: 15 0 5 10; -fx-font-weight: bold;"/>
                        <Button text="Configuración" onAction="#showConfig" maxWidth="Infinity" />
                    </children>
                </VBox>
                
                <!-- Footer -->
                <VBox style="-fx-padding: 20;">
                    <Button text="Cerrar Sesión" onAction="#handleLogout" styleClass="button-danger" maxWidth="Infinity"/>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- CONTENT AREA -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <!-- Vistas dinámicas -->
        </StackPane>
    </center>

</BorderPane>
