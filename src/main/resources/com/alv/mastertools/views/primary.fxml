<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.alv.mastertools.controllers.PrimaryController"
            stylesheets="@../styles.css">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 20; -fx-background-color: -color-bg-sidebar; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, 5, 5, 0);">
            <Label text="ALV MASTER" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: -color-accent;"/>
            <Region HBox.hgrow="ALWAYS" />
            <javafx.scene.control.ComboBox fx:id="themeSelector" prefWidth="120" styleClass="theme-selector" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="250">
            <children>
                <!-- Header Sidebar -->
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <Button fx:id="btnToggle" text="" onAction="#handleToggleSidebar" styleClass="icon-button">
                        <graphic>
                             <javafx.scene.image.ImageView fitHeight="40" fitWidth="40">
                                <image>
                                    <javafx.scene.image.Image url="@../Icono%20simple.png"/>
                                </image>
                            </javafx.scene.image.ImageView>
                        </graphic>
                    </Button>
                </HBox>

                <!-- Opciones -->
                <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
                    <children>
                        <Label fx:id="lblMenu" text="MENÚ PRINCIPAL" style="-fx-text-fill: -color-text-muted; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;"/>
                        
                        <Button fx:id="btnHome" text="INICIO" onAction="#showHome" maxWidth="Infinity" alignment="CENTER_LEFT">
                            <graphic>
                                <javafx.scene.image.ImageView fitHeight="20" fitWidth="20">
                                    <image>
                                        <javafx.scene.image.Image url="@../icono%20generico.png"/>
                                    </image>
                                </javafx.scene.image.ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnTracker" text="SEGUIMIENTO" onAction="#showTracker" maxWidth="Infinity" alignment="CENTER_LEFT">
                            <graphic>
                                <javafx.scene.image.ImageView fitHeight="20" fitWidth="20">
                                    <image>
                                        <javafx.scene.image.Image url="@../icono%20generico.png"/>
                                    </image>
                                </javafx.scene.image.ImageView>
                            </graphic>
                        </Button>
                        
                        <Label fx:id="lblSystem" text="SISTEMA" style="-fx-text-fill: -color-text-muted; -fx-font-size: 11px; -fx-padding: 15 0 5 10; -fx-font-weight: bold;"/>
                        
                        <Button fx:id="btnConfig" text="Configuración" onAction="#showConfig" maxWidth="Infinity" alignment="CENTER_LEFT">
                            <graphic>
                                <javafx.scene.image.ImageView fitHeight="20" fitWidth="20">
                                    <image>
                                        <javafx.scene.image.Image url="@../icono%20generico.png"/>
                                    </image>
                                </javafx.scene.image.ImageView>
                            </graphic>
                        </Button>
                    </children>
                </VBox>
                
                <!-- Footer -->
                <VBox style="-fx-padding: 20;">
                    <Button fx:id="btnLogout" text="Cerrar Sesión" onAction="#handleLogout" styleClass="button-danger" maxWidth="Infinity" alignment="CENTER_LEFT">
                         <graphic>
                            <javafx.scene.image.ImageView fitHeight="20" fitWidth="20">
                                <image>
                                    <javafx.scene.image.Image url="@../icono%20generico.png"/>
                                </image>
                            </javafx.scene.image.ImageView>
                        </graphic>
                    </Button>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- CONTENT AREA -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <!-- Vistas dinámicas -->
        </StackPane>
    </center>

</BorderPane>
