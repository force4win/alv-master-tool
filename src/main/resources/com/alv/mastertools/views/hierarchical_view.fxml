<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alv.mastertools.controllers.HierarchicalViewController">
    <content>
        <HBox style="-fx-background-color: transparent;" alignment="CENTER_LEFT" spacing="0">
            <!-- NAVIGATION AREA (Growing dynamically with columns) -->
            <HBox fx:id="navigationContainer" style="-fx-background-color: transparent;" spacing="0" alignment="CENTER_LEFT" minWidth="-Infinity">
                <!-- Dynamic panels will be added here via Controller -->
            </HBox>

            <!-- CONTENT AREA (Takes remaining space) -->
            <VBox fx:id="contentArea" HBox.hgrow="ALWAYS" style="-fx-background-color: -color-bg-default; -fx-padding: 0;" minWidth="500" spacing="0">
                <!-- Dynamic content will be rendered here via Controller -->
            </VBox>
        </HBox>
    </content>
</ScrollPane>
